<div class="container-fluid">
    <div class="row justify-content-center" style="min-height: 650px; background-image: linear-gradient(120deg, #f6d365 0%, #fda085 100%);">
        <div class="col-md-6 bg-white align-self-center py-5" style="padding: 20px; border-radius: 30px;">
            {% if page.highlighted %}
            <div class="row">
                <div class="col-12 text-center mb-4">
                    {{ page.highlighted }}
                </div>
            </div>
            {% endif %}
            <div class="row">
                <div class="col-sm-6 d-flex justify-content-center">
                    <div class="align-self-center" style="height: 200px;
    width: 200px;
    border-radius: 50%;
    overflow: hidden;
    border: 1px solid #eee;
    text-align: center;
    padding: 30px;
    background: #dcdcdc1f;">

                        <img src="http://drupak.com//sites/default/files/yellowdrupak.png" alt="">

                    </div>

                </div>
                <div class="col-sm-6">
                    {{ page.content }}

                </div>
            </div>
        </div>
    </div>
</div>
